  require 'date'
  class Job
    def initialize(yaml)
      @yaml = yaml
    end

    def date(name)
      Date.parse(@yaml[name]).strftime("%b %Y")
    rescue
      @yaml[name]
    end

    def method_missing(name)
      @yaml[name.to_s]
    end
  end
  jobs = YAML.load_file('history.yml')['jobs'].map(&Job.method(:new)).reverse
  skills = jobs.flat_map(&:skills).uniq
  stacks = jobs.flat_map(&:stack).map { |s| s.gsub('#', '\#') }.uniq
